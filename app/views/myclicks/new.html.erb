

<% if !@myclick.errors.empty? %>
   <div class = "alert alert-error">
      <ul>
         <% @myclick.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
         <% end %>
      </ul>
   </div>
<% end %>

<div class = "well">
   <%= form_for @myclick, html: { multipart: true } do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %></br>
      
      <p><%= f.file_field :attachment %></p>
     
      <%= f.submit "Save", class: "btn btn-primary" %>
   <% end %>
</div>